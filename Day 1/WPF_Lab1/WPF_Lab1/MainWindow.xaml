<Window x:Class="WPF_Lab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Lab1"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <ScrollViewer>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="4">
                <Label Target="{Binding ElementName=fname}" Width="70">_FirstName</Label>
                <TextBox Width="300" Name="fname"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="4">
                <Label Target="{Binding ElementName=lname}" Width="70">_LastName</Label>
                <TextBox Width="300" Name="lname"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="4">
                <Label Target="{Binding ElementName=gender}" Width="70">_Gender</Label>
                <TextBox Width="300" Name="gender"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="4">
                <Label Target="{Binding ElementName=address}" Width="70">_Adress</Label>
                <TextBox Width="300" Name="address"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="4">
                <Label Target="{Binding ElementName=phone}" Width="70">_Phone</Label>
                <TextBox Width="300" Name="phone"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="4">
                <Label Target="{Binding ElementName=mobile}" Width="70">_Mobile</Label>
                <TextBox Width="300" Name="mobile"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="4">
                <Label Target="{Binding ElementName=email}" Width="70">_Email</Label>
                <TextBox Width="300" Name="email"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="4">
                <Label Target="{Binding ElementName=job}" Width="70">_Job Title</Label>
                <TextBox Width="300" Name="job"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="4" HorizontalAlignment="Center">
                <Button Click="save" Margin="3" Padding="10">Ok</Button>
                <Button Margin="3" Padding="10">Cancel</Button>
            </StackPanel>
            
        </StackPanel>       
        
    </ScrollViewer>
</Window>
    
