<Window x:Class="Assignment_2_Simple_Animation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_2_Simple_Animation"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label
                Name="MyRectangle" FontSize="30"            
                Foreground="Blue">
                
                Hello 
            </Label>
            <Label
                Name="MyRectangle2" FontSize="30"            
                Foreground="Blue" Opacity="0">
                   
                it's me
            </Label>
            <Label
                Name="MyRectangle3" FontSize="30"            
                Foreground="Blue" Opacity="0">
                Hello from the other side ^_^
            </Label>
        </StackPanel>
    </Grid>
</Window>
